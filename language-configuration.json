{
    "comments": {
        // symbol used for single line comment. Remove this entry if your 
        // language does not support line comments.
        "lineComment": "--",
        "blockComment": ["[/]-", "-[/]"]
    
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "decreaseIndentPattern": "^\\s*(end|in|then|else|with|case)\\b",
        "increaseIndentPattern": "\\blet[ \\t]+.*=[ \\t]*$|\\blam\\b.*\\.[ \\t]*$|\\b(if|then|else|match|switch|case)[ \\t]*$",
    }
}